<?xml version="1.0"?>

<launch>
  <!-- Run the map server -->
  <arg name="map_file" default="$(find me5413_world)/maps/my_map.yaml"/>
  <node name="map_server" pkg="map_server" type="map_server" args="$(arg map_file)" />
  
  <!-- Launch the AMCL Localizer -->
  <include file="$(find me5413_world)/src/launch/include/amcl.launch" />

  <!-- Launch Move Base -->
  <include file="$(find me5413_world)/src/launch/include/move_base.launch" />

  <!-- Launch Rviz with our settings -->
  <node type="rviz" name="rviz" pkg="rviz" args="-d $(find me5413_world)/rviz/navigation_rviz.rviz" output="log" respawn="true"/>

  <node ns="me5413_world" pkg="me5413_world" type="goal_publisher_node" name="goal_publisher_node" output="screen" />

</launch>
